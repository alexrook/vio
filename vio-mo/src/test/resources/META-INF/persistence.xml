<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="H2-Memory-TEST">
   
        <class>vio.model.doc.Color</class>
        <class>vio.model.doc.Document</class>
        <class>vio.model.doc.DocumentType</class>
        <class>vio.model.doc.Format</class>
        <class>vio.model.doc.Theme</class>
        
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:mem:viodb" />
            <property name="javax.persistence.jdbc.user" value="sa" />
           <property name="javax.persistence.jdbc.password" value="" />

            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="create" />
        </properties>

    </persistence-unit>
    
    
    <persistence-unit name="Postgre-TEST">
        
        <class>vio.model.doc.Color</class>
        <class>vio.model.doc.Document</class>
        <class>vio.model.doc.DocumentType</class>
        <class>vio.model.doc.Format</class>
        <class>vio.model.doc.Theme</class>
        
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://${postgresql.hostname}/viodb" />
            <property name="javax.persistence.jdbc.user" value="vio" />
            <property name="javax.persistence.jdbc.password" value="" />

            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="create" />
        </properties>

    </persistence-unit>

</persistence>
