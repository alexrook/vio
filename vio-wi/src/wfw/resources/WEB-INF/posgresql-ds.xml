<?xml version="1.0" encoding="UTF-8"?>
<datasources xmlns="http://www.jboss.org/ironjacamar/schema">

    <datasource 
	    jndi-name="java:jboss/datasources/PostgreSQLDS" 
	    pool-name="PostgreSQLDS">
        <connection-url>${postgresql.db.url}</connection-url>
        <driver>postgresql</driver>
        <security>
            <user-name>${postgresql.db.username}</user-name>
            <password>${postgresql.db.password}</password>
        </security>
        <validation>
            <valid-connection-checker 
                class-name="org.jboss.jca.adapters.jdbc.extensions.postgres.PostgreSQLValidConnectionChecker">
            </valid-connection-checker>
            <exception-sorter 
                class-name="org.jboss.jca.adapters.jdbc.extensions.postgres.PostgreSQLExceptionSorter">
            </exception-sorter>
        </validation>
    </datasource>

</datasources>
